# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        # colors = true
        # interval = 5

        colors = true
        interval = 5
        color_good = "#FFFFFF"
        color_bad = "#FFFFFF"
        color_degraded = "#FFFFFF"
        output_format = "i3bar"
}

order += "ipv6"
order += "disk /"
#order += "disk /media/kevin/terabytia"
order += "run_watch DHCP"
order += "run_watch VPN"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery 1"
#order += "load"

order += "volume master"
order += "tztime local"

volume master {
    format = "♪: %volume"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

ipv6 {		
        color_good = "#FFFFFF"
        color_bad = "#FFFFFF"
        color_degraded = "#FFFFFF"
}

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"		
        color_good = "#FFFFFF"
        color_bad = "#FFFFFF"
        color_degraded = "#FFFFFF"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
        color_good = "#FFFFFF"
        color_bad = "#FFFFFF"
        color_degraded = "#FFFFFF"
}

battery 1 {
        format = "%status %percentage %remaining"
        # format = "%status %percentage"	
        color_good = "#FFFFFF"
        color_bad = "#FFFFFF"
        color_degraded = "#FFFFFF"
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"	
        color_good = "#FFFFFF"
        color_bad = "#FFFFFF"
        color_degraded = "#FFFFFF"
}

run_watch VPN {
        pidfile = "/var/run/vpnc/pid"	
        color_good = "#FFFFFF"
        color_bad = "#FFFFFF"
        color_degraded = "#FFFFFF"
}

tztime local {
        format = "%d-%m-%Y %H:%M:%S"
}

load {
        format = "%1min"
}

disk "/" {
        format = "%avail"		
        # color_bad = "#F95738"
}

